#!/bin/bash

WD="$(dirname $(readlink $0 || echo $0))"
FILE="$WD/src/mysettings.conf"
echo $FILE
if [[ ! -e $FILE ]]; then
    echo "$FILE file already exists!"
    echo -n "Do you still want to continue? [y/n] "
    read reply
    if [[ ${reply,,} == 'y' || ${reply} == "" ]]; then
        echo "Re-configuring..."
        cp $FILE $FILE.bak
    else
        exit
    fi
fi

mkdir -p $WD/gloss/
cd $WD/gloss
wget -c https://github.com/foss-np/np-l10n-glossary/archive/current.tar.gz
tar xvzf current.tar.gz
